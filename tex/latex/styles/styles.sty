\newcommand{\nocprefix} % pas de préfixe
	{
		\def\sufchap{~} 
		\def\chappoint{.} % I.
		\def\prechap{} % supprime le préfixe
	}
	
\newcommand{\cprefix} % préfixe activé
	{
		\def\sufchap{ :~} %ajout d'un ":"
		\def\chappoint{} % I
		\def\prechap{\prefixchap~} % ajoute le préfixe
	}


